<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ViewController.UserChatViews.BuyCoins">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/crop_background"
        tools:ignore="ContentDescription" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/rect"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/back_to_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="0dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/ebrima"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3sp"
            android:text="@string/back"
            android:layout_weight="1"
            android:textColor="@color/white"
            app:drawableLeftCompat="@drawable/ic_left_arrow" />


        <TextView
            android:id="@+id/coins_earned"
            android:layout_width="match_parent"
            android:layout_height="40dp"


            android:fontFamily="@font/inter_700"
            android:textSize="18sp"
            android:layout_marginEnd="9dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:gravity="center|right"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coins_image"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="-25dp"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy coins"
                android:fontFamily="@font/inter_700"
                android:textSize="18sp"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/ic_white_wave_background">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/AdView_Layout"
                android:layout_marginTop="47dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:gravity="center"

                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="23dp"
                    android:orientation="horizontal"
                    android:background="@drawable/coins_earned_background"
                    >

                    <TextView
                        android:id="@+id/coins_earned2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"


                        android:fontFamily="@font/inter_700"
                        android:textSize="18sp"
                        android:layout_marginEnd="9dp"

                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/black_star"
                        android:layout_gravity="center"

                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="17dp"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/ten_coins"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ten_coins" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="44dp"
                                    android:background="@drawable/buy_coins_shape"
                                    android:layout_marginTop="-21dp"
                                    android:layout_marginLeft="28dp"
                                    android:layout_marginRight="28dp">

                                    <TextView
                                        android:id="@+id/buy_1_dollar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/inter_700"
                                        android:textColor="@color/white"
                                        android:textSize="13sp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/thirty_coins"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/thirty_coins" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="44dp"
                                    android:background="@drawable/buy_coins_shape"
                                    android:layout_marginTop="-21dp"
                                    android:layout_marginLeft="28dp"
                                    android:layout_marginRight="28dp">

                                    <TextView
                                        android:id="@+id/buy_2_dollar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/inter_700"
                                        android:textSize="13sp" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/fifty_coins"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/fifty_coins" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="44dp"
                                    android:background="@drawable/buy_coins_shape"
                                    android:layout_marginTop="-21dp"
                                    android:layout_marginLeft="28dp"
                                    android:layout_marginRight="28dp">

                                    <TextView
                                        android:id="@+id/buy_4_dollar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/inter_700"
                                        android:textSize="13sp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/hundred_coins"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/hundred_coins" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="44dp"
                                    android:background="@drawable/buy_coins_shape"
                                    android:layout_marginTop="-21dp"
                                    android:layout_marginLeft="28dp"
                                    android:layout_marginRight="28dp">

                                    <TextView
                                        android:id="@+id/buy_7_dollar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/inter_700"
                                        android:textSize="13sp" />

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>




            </LinearLayout>


            <RelativeLayout
                android:id="@+id/AdView_Layout"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="21dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ad_view_shape">

                <TextView
                    android:id="@+id/ask_questionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="41dp"
                    android:fontFamily="@font/inter_700"
                    android:text="Watch to get free coins"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/lock_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="false"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/ask_questionTextView"
                    android:src="@drawable/ad_play_button" />

                <!--<TextView
                    android:id="@+id/dollar_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    android:layout_centerVertical="true"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/inter_700"
                    android:text="1$ / message"
                    android:textColor="@color/white"
                    android:textSize="15sp" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="Please click here again after payment done"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <!-- <Button
                    android:id="@+id/in_app_purchase"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:background="@drawable/ask_question_and_chatbox_button"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="26dp"
                    android:textColor="@color/white"
                    android:text="Ask a Question" />-->

            </RelativeLayout>


        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>